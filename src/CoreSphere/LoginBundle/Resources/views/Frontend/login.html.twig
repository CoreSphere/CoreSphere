{% extends "CoreSphereLoginBundle:Frontend:layout.html.twig" %}

{% block title %}
{{ "headline.login_new"|trans }}
{% endblock %}

{% block content %}

<h1>{{ "headline.login_new"|trans }}</h1>

<form action="{{ path('login_check') }}" method="post">

	{% if error %}
	    <div class="flash error">{{ error.message }}</div>
	{% endif %}

    <div class="form-row">
    	<label for="username">{{ "attribute.login_username"|trans }}:</label>
	    <input type="text" id="username" name="_username" value="{{ last_username }}" />
    </div>

	<div class="form-row">
    	<label for="password">{{ "attribute.login_password"|trans }}:</label>
	    <input type="password" id="password" name="_password" />
	</div>

	<div class="form-row">
		<input type="checkbox" id="remember_me" name="_remember_me" value="1" />
		<label for="remember_me">{{ "attribute.login_remember_me"|trans }}</label>
	</div>

	<div class="form-row">
    	<input type="submit" value="{{ "button.login_create"|trans }}" />
	</div>
</form>

{% endblock %}