{% extends 'form_div_layout.html.twig' %}

{% block field_rows %}
    <div class="form-errors">
        {{ form_errors(form) }}
    </div>
    {% for child in form.children %}
        {{ form_row(child) }}
    {% endfor %}
{% endblock field_rows %}

{% block field_row %}
    <div class="form-row{% if errors|length > 0 %} errors{% endif %}">
        {{ form_label(form) }}
        <div class="form-field">
            {{ form_widget(form) }}
            {% if errors|length > 0 %}
            <div class="form-errors">
                {{ form_errors(form) }}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block field_label %}
		{% spaceless %}
    <label for="{{ id }}"{% for attrname,attrvalue in attr %} {{attrname}}="{{attrvalue}}"{% endfor %}>{{ ('attribute.'~id)|trans }}
  {% if required %}
    <span class="form-required" title="This field is required">*</span>
  {% endif %}
				</label>
		{% endspaceless %}
{% endblock field_label %}

{% block form_label %}
		{% spaceless %}
    <label {% for attrname,attrvalue in attr %} {{attrname}}="{{attrvalue}}"{% endfor %}>{{ ('attribute.'~id)|trans }}
				{% if required %}
						<span class="form-required" title="This field is required">*</span>
				{% endif %}
				</label>
		{% endspaceless %}
{% endblock form_label %}


{% block repeated_row %}
    <div class="form-row{% if errors|length > 0 %} errors{% endif %}">
    {% for field in form %}
        {{ form_row(field) }}
    {% endfor %}

    {% if errors|length > 0 %}
    <div class="form-errors">
        {{ form_errors(form) }}
    </div>
    {% endif %}
    </div>
{% endblock %}