{% extends 'CoreSphereStaticBundle:Page:layout.html.twig' %}

{% block title %}
{{ 'headline.page_index'|trans }}
{% endblock %}

{% block content %}
  <h2>{{ 'headline.page_index'|trans }}</h2>
	<table class="records_list">
			<thead>
					<tr>
							<th>{{ 'attribute.staticbundle_static_id'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_title'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_content'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_createdAt'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_publishedAt'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_updatedAt'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_permalink'|trans }}</th>
							<th>{{ 'attribute.staticbundle_static_actions'|trans }}</th>
					</tr>
			</thead>
			<tbody>
			{% for entity in entities %}
					<tr>
							<td><a href="{{ path('page_show', { 'permalink': entity.permalink }) }}">{{ entity.id }}</a></td>
							<td>{{ entity.title }}</td>
							<td>{{ entity.content|truncate(20) }}</td>
							<td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
							<td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>
							<td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
							<td>{{ entity.permalink }}</td>
							<td>
									<ul>
											<li>
													<a href="{{ path('page_show', { 'permalink': entity.permalink }) }}">{{ 'action.page_show'|trans }}</a>
											</li>
											<li>
													<a href="{{ path('page_edit', { 'permalink': entity.permalink }) }}">{{ 'action.page_edit'|trans }}</a>
											</li>
									</ul>
							</td>
					</tr>
			{% endfor %}
			</tbody>
	</table>
	
	<ul>
			<li>
					<a href="{{ path('page_new') }}">{{ 'action.page_new_page'|trans }}</a>
			</li>
	</ul>
{% endblock %}