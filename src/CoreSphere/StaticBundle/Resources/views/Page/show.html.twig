{% extends 'CoreSphereStaticBundle:Page:layout.html.twig' %}

{% block title %}
{{ 'headline.page_index'|trans }}
{% endblock %}

{% block content %}
<h2>{{ entity.title }}</h2>

<div class="record_show">
		{{ entity.content }}
</div>

<br />

<table class="record_slug">
    <tbody>
        <tr>
            <th>{{ 'attribute.staticbundle_static_slug'|trans }}</th>
												<td><a href="{{ entity.slug }}" target="_blank">{{ entity.slug }}</a></td>
								</tr>
    </tbody>
</table>

<br />

<table class="record_properties">
    <tbody>
        <tr>
												<th>{{ 'attribute.staticbundle_static_id'|trans }}</th>
												<th>{{ 'attribute.staticbundle_static_createdAt'|trans }}</th>
												<th>{{ 'attribute.staticbundle_static_publishedAt'|trans }}</th>
												<th>{{ 'attribute.staticbundle_static_updatedAt'|trans }}</th>
								</tr>
        <tr>
												<td>{{ entity.id }}</td>
												<td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
												<td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>
												<td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
								</tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('page') }}">
            {{ 'action.page_to_index'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('page_edit', { 'slug': entity.slug }) }}">
            {{ 'action.page_edit'|trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('page_delete', { 'slug': entity.slug }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ 'action.page_delete'|trans }}</button>
        </form>
    </li>
</ul>
{% endblock %}
